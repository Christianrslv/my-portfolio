---

<section id="contact" class="lg:pb-0! container flex flex-1 w-full bg-transparent">
	<div class="w-full flex flex-col items-center lg:justify-center gap-9">
		<SectionTitle number="06" title="Get In Touch" />
		
		<div class="flex flex-col h-full items-center justify-center gap-10 md:gap-12 w-full max-w-[680px] 2xl:max-w-[720px] 3xl:max-w-[800px]">
			<!-- Main contact card -->
			<div class="contact-card w-full rounded-3xl border overflow-hidden transition-all duration-300 ease-out">
				<div class="relative p-7 xs:p-8 md:p-12 2xl:p-14">
					<!-- Decorative element -->
					<div class="contact-accent absolute left-0 w-[3px] rounded-r-sm"></div>
					
					<div class="flex flex-col items-center lg:items-start gap-5 md:gap-6 pl-4 md:pl-6">
						<h3 class="font-serif text-center lg:text-left text-[1.375rem] md:text-2xl 2xl:text-[2rem] 3xl:text-4xl font-light text-(--text-primary) tracking-tight leading-tight m-0">
							Let's Create Something Together
						</h3>
						<p class="text-base md:text-[1.0625rem] 2xl:text-lg text-(--text-secondary) dark:text-slate-400 leading-relaxed m-0">
							{description}
						</p>
						
						<!-- Email CTA -->
						<a href={`mailto:${email}`} class="email-link inline-flex items-center gap-3 py-3.5 px-6 md:py-4 md:px-7 rounded-full no-underline text-sm md:text-[0.9375rem] font-normal tracking-wide transition-all duration-300 ease-out w-fit mt-2">
							<span class="flex items-center justify-center text-[#ff8c3c]">
								<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
									<path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
								</svg>
							</span>
							<span class="flex-1">Say Hello</span>
							<span class="email-arrow flex items-center justify-center opacity-50 transition-all duration-300 ease-out">
								<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
									<path d="M5 12h14M13 6l6 6-6 6"/>
								</svg>
							</span>
						</a>
					</div>
				</div>
			</div>
			
			<!-- Social links -->
			<div class="flex flex-col items-center gap-5">
				<span class="text-[0.8125rem] font-normal text-(--text-secondary) dark:text-slate-500 tracking-widest uppercase opacity-70">
					Connect with me
				</span>
				<div class="flex gap-3 md:gap-4 flex-wrap justify-center">
					{socialLinks.map((link) => (
						<a href={link.url} class="social-link flex items-center gap-2.5 py-2.5 px-4 md:py-3 md:px-5 rounded-full no-underline text-sm font-normal transition-all duration-300 ease-out xs:gap-2.5" aria-label={link.name} data-social={link.icon}>
							<span class="social-icon flex items-center justify-center transition-all duration-300 ease-out">
								<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
									<path d={iconPaths[link.icon as keyof typeof iconPaths] || ""} />
								</svg>
							</span>
							<span class="social-name transition-all duration-300 ease-out hidden xs:inline">{link.name}</span>
						</a>
					))}
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	/* Plain CSS required: Glassmorphism effects with rgba backgrounds and backdrop-filter */
	.contact-card {
		background: rgba(255, 255, 255, 0.25);
		backdrop-filter: blur(16px);
		-webkit-backdrop-filter: blur(16px);
		border-color: rgba(255, 255, 255, 0.35);
		box-shadow: 0 4px 24px rgba(0, 0, 0, 0.04);
	}

	html.dark .contact-card {
		background: rgba(30, 41, 59, 0.35);
		border-color: rgba(148, 163, 184, 0.15);
		box-shadow: 0 4px 24px rgba(0, 0, 0, 0.12);
	}

	.contact-card:hover {
		transform: translateY(-4px);
		background: rgba(255, 255, 255, 0.35);
		box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
		border-color: rgba(255, 140, 60, 0.3);
	}

	html.dark .contact-card:hover {
		background: rgba(30, 41, 59, 0.45);
		box-shadow: 0 12px 32px rgba(0, 0, 0, 0.2);
		border-color: rgba(255, 140, 60, 0.4);
	}

	/* Plain CSS required: Accent bar with dynamic top/bottom positioning */
	.contact-accent {
		top: 1.5rem;
		bottom: 1.5rem;
		background: #ff8c3c;
	}

	@media (min-width: 768px) {
		.contact-accent {
			top: 2rem;
			bottom: 2rem;
		}
	}

	/* Plain CSS required: Email link glassmorphism and hover color effects */
	.email-link {
		background: rgba(255, 255, 255, 0.5);
		backdrop-filter: blur(8px);
		-webkit-backdrop-filter: blur(8px);
		border: 1px solid rgba(255, 255, 255, 0.6);
		color: var(--text-primary);
	}

	html.dark .email-link {
		background: rgba(30, 41, 59, 0.5);
		border-color: rgba(148, 163, 184, 0.2);
	}

	.email-link:hover {
		background: rgba(255, 140, 60, 0.15);
		border-color: rgba(255, 140, 60, 0.4);
		transform: translateX(4px);
	}

	html.dark .email-link:hover {
		background: rgba(255, 140, 60, 0.2);
		border-color: rgba(255, 140, 60, 0.5);
	}

	.email-link:hover .email-arrow {
		opacity: 1;
		transform: translateX(4px);
		color: #ff8c3c;
	}

	/* Plain CSS required: Social link glassmorphism and hover effects */
	.social-link {
		background: rgba(255, 255, 255, 0.35);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		border: 1px solid rgba(255, 255, 255, 0.4);
		color: var(--text-secondary);
	}

	html.dark .social-link {
		background: rgba(30, 41, 59, 0.4);
		border-color: rgba(148, 163, 184, 0.15);
	}

	.social-link:hover {
		transform: translateY(-3px);
		background: rgba(255, 255, 255, 0.5);
		border-color: rgba(255, 140, 60, 0.35);
		color: var(--text-primary);
		box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
	}

	html.dark .social-link:hover {
		background: rgba(30, 41, 59, 0.55);
		border-color: rgba(255, 140, 60, 0.4);
		box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
	}

	.social-link:hover .social-icon {
		color: #ff8c3c;
	}

	/* Mobile: icon-only social links */
	@media (max-width: 479px) {
		.social-link {
			padding: 0.75rem;
			border-radius: 50%;
		}
	}
</style>