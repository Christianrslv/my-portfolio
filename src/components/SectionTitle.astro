---
interface Props {
	number: string;
	title: string;
}

const { number, title } = Astro.props;
---

<h2 class="section-title">
	<span class="section-number">{number}.</span>
	{title}
</h2>

<style>
	.section-title {
		font-size: clamp(2rem, 4vw, 2.5rem);
		font-weight: 700;
		margin-bottom: 3rem;
		display: flex;
		align-items: center;
		gap: 1rem;
		color: var(--text-primary);
	}

	.section-number {
		color: var(--accent-primary);
		font-family: 'Courier New', monospace;
		font-size: 1.25rem;
	}
</style>