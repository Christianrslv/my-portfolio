---
interface Props {
	title: string;
	description: string;
	technologies: string[];
	projectUrl?: string;
	codeUrl?: string;
	class?: string;
}

const { title, description, technologies, projectUrl = "#", codeUrl = "#", class: className } = Astro.props;
---

<article class={`bg-(--bg-tertiary) rounded-xl overflow-hidden border border-(--border-color) transition-all duration-300 ease-in-out hover:-translate-y-[5px] hover:border-(--accent-primary) hover:shadow-[0_10px_30px_rgba(99,102,241,0.2)] md:hover:-translate-y-[3px] ${className}`}>
	<div class="relative w-full aspect-video overflow-hidden bg-(--bg-secondary)">
		<div class="w-full h-full bg-(--accent-primary) opacity-[0.08] transition-opacity duration-200 ease-in-out hover:opacity-[0.12]"></div>
		<div class="absolute inset-0 bg-black/70 flex items-center justify-center gap-4 md:gap-6 opacity-0 transition-opacity duration-300 ease-in-out hover:opacity-100">
			<a href={projectUrl} class="w-10 h-10 md:w-12 md:h-12 bg-(--bg-tertiary) rounded-full flex items-center justify-center text-(--text-primary) no-underline transition-all duration-300 ease-in-out hover:bg-(--accent-primary) hover:scale-110" aria-label="View project">
				<svg class="w-5 h-5 md:w-6 md:h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
					<polyline points="15 3 21 3 21 9"></polyline>
					<line x1="10" y1="14" x2="21" y2="3"></line>
				</svg>
			</a>
			<a href={codeUrl} class="w-10 h-10 md:w-12 md:h-12 bg-(--bg-tertiary) rounded-full flex items-center justify-center text-(--text-primary) no-underline transition-all duration-300 ease-in-out hover:bg-(--accent-primary) hover:scale-110" aria-label="View code">
				<svg class="w-5 h-5 md:w-6 md:h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<polyline points="16 18 22 12 16 6"></polyline>
					<polyline points="8 6 2 12 8 18"></polyline>
				</svg>
			</a>
		</div>
	</div>
	<div class="p-4 md:p-6">
		<h3 class="text-lg md:text-xl mb-2 md:mb-3 text-(--text-primary)">{title}</h3>
		<p class="text-(--text-secondary) mb-3 md:mb-4 leading-relaxed text-sm md:text-base">{description}</p>
		<div class="flex flex-wrap gap-1.5 md:gap-2">
			{technologies.map((tech) => (
				<span class="text-xs text-(--accent-primary) font-mono">{tech}</span>
			))}
		</div>
	</div>
</article>
