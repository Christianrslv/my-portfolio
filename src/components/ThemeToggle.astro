<button
	class="theme-toggle ml-4 inline-flex items-center gap-2 rounded-full border border-[var(--border-color)] px-3 py-2 text-sm text-[var(--text-primary)] transition hover:bg-[var(--bg-tertiary)]"
	type="button"
	aria-label="Toggle theme"
>
	<span class="theme-icon">ðŸŒž</span>
	<span class="theme-label">Light</span>
</button>

<script>
	const button = document.querySelector('.theme-toggle');
	const icon = document.querySelector('.theme-icon');
	const label = document.querySelector('.theme-label');

	const setTheme = (isDark) => {
		document.documentElement.classList.toggle('dark', isDark);
		localStorage.setItem('theme', isDark ? 'dark' : 'light');
		if (icon) icon.textContent = isDark ? 'ðŸŒ™' : 'ðŸŒž';
		if (label) label.textContent = isDark ? 'Dark' : 'Light';
	};

	const storedTheme = localStorage.getItem('theme');
	if (storedTheme === 'dark') {
		setTheme(true);
	} else {
		setTheme(false);
	}

	if (button) {
		button.addEventListener('click', () => {
			const isDark = document.documentElement.classList.contains('dark');
			setTheme(!isDark);
		});
	}
</script>
