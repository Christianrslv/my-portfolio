---
interface Props {
	greeting?: string;
	name?: string;
	role?: string;
	description?: string;
	primaryButton?: { text: string; href: string };
	secondaryButton?: { text: string; href: string };
	backgroundImage?: string;
}

const {
	greeting = "Hi, I'm",
	name = "Your Name",
	role = "Full Stack Developer",
	description = "I create beautiful, functional, and user-centered digital experiences. Passionate about clean code and innovative solutions.",
	primaryButton = { text: "View Work", href: "#projects" },
	secondaryButton = { text: "Get In Touch", href: "#contact" },
	backgroundImage,
} = Astro.props;
---

<section id="home" class="hero container flex items-center justify-center ">
	<div class="hero-content w-full flex flex-col items-center justify-center lg:items-start lg:justify-start">
		<div class="hero-text flex flex-col items-center justify-center lg:items-start lg:justify-start">
			<h1 class="hero-title flex flex-col items-center justify-center lg:items-start lg:justify-start">
				<span class="greeting text-slate-800 text-xl 3xl:text-2xl font-light mb-3 opacity-0">{greeting}</span>
				<span class="name text-5xl lg:text-7xl xl:text-8xl" data-animate-letters>{name}</span>
				<span class="role text-accent-secondary font-light mt-2 opacity-0 text-2xl lg:text-3xl">{role}</span>
			</h1>
			<p class="hero-description text-lg font-light text-slate-800 mb-12 max-w-xl leading-relaxed tracking-wide opacity-0 lg:text-xl xl:text-xl flex flex-col text-center lg:text-left">{description}</p>
			<div class="hero-buttons">
				<a href={primaryButton.href} class="btn btn-primary">{primaryButton.text}</a>
				<a href={secondaryButton.href} class="btn btn-secondary">{secondaryButton.text}</a>
			</div>
		</div>
	</div>
</section>

<style>

  html.dark .greeting {
    color: #cbd5e1;
  }

  html.dark .hero-description {
    color: #cbd5e1;
  }

	.hero {
		min-height: 100vh;
		display: flex;
		align-items: flex-start;
		justify-content: flex-start;
		position: relative;
		overflow: visible; /* Changed from hidden to see animation */
		z-index: 1;
	}
	.hero-text {
		/* Removed fadeInUp to avoid conflict with letter animation */
		overflow: visible; /* Ensure animation is visible */
	}

	.hero-title {
		font-family: 'Libre Baskerville', serif;
		font-size: clamp(3rem, 6vw, 5rem);
		font-weight: 300;
		line-height: 1.3;
		margin-bottom: 2rem;
		display: flex;
		flex-direction: column;
		letter-spacing: -0.03em;
		overflow: visible; /* Ensure animation is visible */
	}
	
	.hero.animate .greeting {
		animation: fadeIn 0.6s ease forwards;
	}

	.name {
		color: var(--text-primary);
		font-weight: 300;
		margin-bottom: 0.5rem;
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		overflow: visible;
		width: 100%;
	}

	@media (min-width: 1024px) {
		.name {
			display: inline-flex;
			justify-content: flex-start;
			width: auto;
		}
	}

	/* Letter spans - initial state set by JS, animation controlled by class */
	.name .letter {
		display: inline-block;
		opacity: 0;
		will-change: transform, opacity;
	}

	/* Preserve spaces */
	.name .letter-space {
		width: 0.35em;
	}
	.hero.animate .role {
		animation: fadeIn 1s ease 0.4s both;
	}
	
	.hero.animate .hero-description {
		animation: fadeIn 1.2s ease 0.6s both;
	}

	.hero-buttons {
		display: flex;
		gap: 1rem;
		opacity: 0;
	}
	
	.hero.animate .hero-buttons {
		animation: fadeIn 1.4s ease 0.8s both;
	}

	.btn {
		padding: 0.875rem 2rem;
		border-radius: 8px;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
		display: inline-block;
		border: 1px solid transparent;
	}

	.btn-primary {
		background: var(--accent-primary);
		color: var(--bg-primary);
		border-color: var(--accent-primary);
		font-weight: 300;
	}

	.btn-primary:hover {
		background: var(--accent-hover);
		border-color: var(--accent-hover);
		transform: translateY(-1px);
	}

	.btn-secondary {
		background: transparent;
		color: var(--text-primary);
		border-color: var(--border-color);
		font-weight: 300;
	}

	.btn-secondary:hover {
		background: var(--bg-tertiary);
		border-color: var(--accent-primary);
		color: var(--accent-primary);
	}

	.scroll-indicator {
		position: absolute;
		bottom: 2rem;
		left: 50%;
		transform: translateX(-50%);
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		color: var(--text-secondary);
		font-size: 0.875rem;
		animation: fadeIn 1.6s ease 1s both;
	}

	.scroll-line {
		width: 2px;
		height: 40px;
		background: var(--gradient-primary);
		animation: scrollDown 2s ease-in-out infinite;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0) translateX(0);
		}
		33% {
			transform: translateY(-30px) translateX(20px);
		}
		66% {
			transform: translateY(30px) translateX(-20px);
		}
	}

	@keyframes scrollDown {
		0% {
			transform: translateY(0);
			opacity: 1;
		}
		100% {
			transform: translateY(20px);
			opacity: 0;
		}
	}
</style>

<script is:inline>
	// Direction: -1 = from top, 1 = from bottom
	const LETTER_DIRECTION = 1;

	function prepareLetterSpans() {
		const nameElement = document.querySelector('[data-animate-letters]');
		if (!nameElement || nameElement.dataset.prepared) return null;

		const text = nameElement.textContent?.trim() || '';
		if (!text) return null;

		const offset = 30 * LETTER_DIRECTION;
		
		nameElement.innerHTML = '';
		nameElement.dataset.prepared = 'true';
		const words = text.split(' ');
		const allSpans = [];

		words.forEach((word, wordIndex) => {
			const wordWrapper = document.createElement('span');
			wordWrapper.style.whiteSpace = 'nowrap';
			wordWrapper.style.display = 'inline-block';
			wordWrapper.style.textAlign = 'center';

			word.split('').forEach((char) => {
				const span = document.createElement('span');
				span.className = 'letter';
				span.textContent = char;
				span.style.opacity = '0';
				span.style.transform = `translateY(${offset}px)`;
				span.style.filter = 'blur(8px)';
				span.style.display = 'inline-block';
				wordWrapper.appendChild(span);
				allSpans.push(span);
			});

			nameElement.appendChild(wordWrapper);

			if (wordIndex < words.length - 1) {
				const space = document.createElement('span');
				space.className = 'letter letter-space';
				space.innerHTML = '&nbsp;';
				space.style.opacity = '0';
				space.style.display = 'inline-block';
				nameElement.appendChild(space);
				allSpans.push(space);
			}
		});

		return { allSpans, offset };
	}

	function animateLetters(allSpans, offset) {
		const total = allSpans.length;
		let cumulativeDelay = 200; // Reduced since preloader already provides delay
		
		allSpans.forEach((span, index) => {
			const progress = index / Math.max(total - 1, 1);
			const curve = 1 - Math.pow(1 - progress, 2);
			
			const letterDelay = 25 + (curve * 55);
			const letterDuration = 45 + (curve * 105);
			
			cumulativeDelay += letterDelay;
			
			span.animate([
				{ opacity: 0, transform: `translateY(${offset}px)`, filter: 'blur(8px)' },
				{ opacity: 1, transform: 'translateY(0)', filter: 'blur(0px)' }
			], {
				duration: letterDuration,
				delay: cumulativeDelay,
				easing: 'cubic-bezier(0.25, 0.46, 0.45, 0.94)',
				fill: 'forwards'
			});
		});
	}

	// Prepare letter spans immediately (so layout is correct)
	let letterData = null;
	
	function init() {
		letterData = prepareLetterSpans();
	}

	// Wait for siteready event (after preloader) to animate
	function startAnimation() {
		if (letterData) {
			animateLetters(letterData.allSpans, letterData.offset);
		}
	}

	// Initialize spans when DOM is ready
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}

	// Start all hero animations
	function startAllAnimations() {
		// Add animate class to trigger CSS animations
		const hero = document.querySelector('.hero');
		if (hero) {
			hero.classList.add('animate');
		}
		
		// Start letter animation
		if (letterData) {
			animateLetters(letterData.allSpans, letterData.offset);
		}
	}

	// Wait for siteready event (after preloader) to animate
	window.addEventListener('siteready', startAllAnimations);
	
	// Fallback: if siteready doesn't fire within 3s, start anyway
	setTimeout(() => {
		const hero = document.querySelector('.hero');
		if (hero && !hero.classList.contains('animate')) {
			startAllAnimations();
		}
	}, 3000);
</script>