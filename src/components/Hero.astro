---
interface Props {
	greeting?: string;
	name?: string;
	role?: string;
	description?: string;
	primaryButton?: { text: string; href: string };
	secondaryButton?: { text: string; href: string };
	backgroundImage?: string;
}

const {
	greeting = "Hi, I'm",
	name = "Your Name",
	role = "Full Stack Developer",
	description = "I create beautiful, functional, and user-centered digital experiences. Passionate about clean code and innovative solutions.",
	primaryButton = { text: "View Work", href: "#projects" },
	secondaryButton = { text: "Get In Touch", href: "#contact" },
	backgroundImage,
} = Astro.props;
---

<section id="home" class="hero">
	<div class="hero-content">
		<div class="hero-text">
			<h1 class="hero-title">
				<span class="greeting">{greeting}</span>
				<span class="name">{name}</span>
				<span class="role">{role}</span>
			</h1>
			<p class="hero-description">{description}</p>
			<div class="hero-buttons">
				<a href={primaryButton.href} class="btn btn-primary">{primaryButton.text}</a>
				<a href={secondaryButton.href} class="btn btn-secondary">{secondaryButton.text}</a>
			</div>
		</div>
		<div class="hero-visual">
			<div class="gradient-orb orb-1"></div>
			<div class="gradient-orb orb-2"></div>
			<div class="gradient-orb orb-3"></div>
		</div>
	</div>
	<div class="scroll-indicator">
		<span>Scroll</span>
		<div class="scroll-line"></div>
	</div>
</section>

<style>
	.hero {
		min-height: 100vh;
		display: flex;
		align-items: flex-start;
		justify-content: flex-start;
		position: relative;
		padding: 10rem 3rem 6rem;
		overflow: hidden;
		z-index: 1;
	}

	@media (max-width: 1024px) {
		.hero {
			padding: 10rem 2rem 6rem;
		}
	}

	@media (max-width: 768px) {
		.hero {
			padding: 8rem 1.5rem 4rem;
		}
	}

	@media (max-width: 480px) {
		.hero {
			padding: 6rem 1rem 4rem;
		}
	}

	.hero-content {
		width: 100%;
		padding: 0 3rem;
		display: grid;
		grid-template-columns: 1fr;
		gap: 4rem;
		align-items: flex-start;
		z-index: 1;
	}

	@media (max-width: 1024px) {
		.hero-content {
			padding: 0 2rem;
		}
	}

	@media (max-width: 768px) {
		.hero-content {
			padding: 0 1.5rem;
		}
	}

	@media (max-width: 480px) {
		.hero-content {
			padding: 0 1rem;
		}
	}

	.hero-text {
		animation: fadeInUp 0.8s ease;
	}

	.hero-title {
		font-family: 'Libre Baskerville', serif;
		font-size: clamp(3rem, 6vw, 5rem);
		font-weight: 300;
		line-height: 1.3;
		margin-bottom: 2rem;
		display: flex;
		flex-direction: column;
		letter-spacing: -0.03em;
	}

	.greeting {
		color: var(--text-secondary);
		font-size: 1.25rem;
		font-weight: 300;
		margin-bottom: 0.75rem;
		animation: fadeIn 0.6s ease;
		letter-spacing: 0.02em;
	}

	.name {
		color: var(--text-primary);
		font-weight: 300;
		margin-bottom: 0.5rem;
		animation: fadeIn 0.8s ease 0.2s both;
	}

	.role {
		color: var(--accent-primary);
		font-size: 1.5rem;
		font-weight: 300;
		margin-top: 0.5rem;
		opacity: 0.8;
		animation: fadeIn 1s ease 0.4s both;
	}

	.hero-description {
		font-size: 1.125rem;
		font-weight: 300;
		color: var(--text-secondary);
		margin-bottom: 3rem;
		max-width: 600px;
		line-height: 1.9;
		animation: fadeIn 1.2s ease 0.6s both;
		letter-spacing: 0.01em;
	}

	.hero-buttons {
		display: flex;
		gap: 1rem;
		animation: fadeIn 1.4s ease 0.8s both;
	}

	.btn {
		padding: 0.875rem 2rem;
		border-radius: 8px;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
		display: inline-block;
		border: 1px solid transparent;
	}

	.btn-primary {
		background: var(--accent-primary);
		color: var(--bg-primary);
		border-color: var(--accent-primary);
		font-weight: 300;
	}

	.btn-primary:hover {
		background: var(--accent-hover);
		border-color: var(--accent-hover);
		transform: translateY(-1px);
	}

	.btn-secondary {
		background: transparent;
		color: var(--text-primary);
		border-color: var(--border-color);
		font-weight: 300;
	}

	.btn-secondary:hover {
		background: var(--bg-tertiary);
		border-color: var(--accent-primary);
		color: var(--accent-primary);
	}

	.hero-visual {
		position: relative;
		width: 100%;
		height: 500px;
		animation: fadeIn 1s ease 0.4s both;
	}

	.gradient-orb {
		position: absolute;
		border-radius: 50%;
		filter: blur(100px);
		opacity: 0.15;
		animation: float 8s ease-in-out infinite;
	}

	.orb-1 {
		width: 300px;
		height: 300px;
		background: var(--accent-primary);
		top: 10%;
		left: 10%;
		animation-delay: 0s;
	}

	.orb-2 {
		width: 250px;
		height: 250px;
		background: var(--accent-primary);
		top: 50%;
		right: 10%;
		animation-delay: 2s;
		opacity: 0.1;
	}

	.orb-3 {
		width: 200px;
		height: 200px;
		background: var(--accent-primary);
		bottom: 10%;
		left: 50%;
		animation-delay: 4s;
		opacity: 0.08;
	}

	.scroll-indicator {
		position: absolute;
		bottom: 2rem;
		left: 50%;
		transform: translateX(-50%);
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		color: var(--text-secondary);
		font-size: 0.875rem;
		animation: fadeIn 1.6s ease 1s both;
	}

	.scroll-line {
		width: 2px;
		height: 40px;
		background: var(--gradient-primary);
		animation: scrollDown 2s ease-in-out infinite;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0) translateX(0);
		}
		33% {
			transform: translateY(-30px) translateX(20px);
		}
		66% {
			transform: translateY(30px) translateX(-20px);
		}
	}

	@keyframes scrollDown {
		0% {
			transform: translateY(0);
			opacity: 1;
		}
		100% {
			transform: translateY(20px);
			opacity: 0;
		}
	}

	@media (max-width: 768px) {
		.hero-content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.hero-visual {
			height: 300px;
		}

		.hero-buttons {
			justify-content: center;
		}
	}
</style>