---
import SectionTitle from './SectionTitle.astro';

interface SkillCategory {
	title: string;
	skills: string[];
}

interface Props {
	categories?: SkillCategory[];
}

const {
	categories = [
		{
			title: "Frontend",
			skills: ["React", "TypeScript", "Next.js", "Astro", "Tailwind CSS", "Vue.js"],
		},
		{
			title: "Backend",
			skills: ["Node.js", "Python", "PostgreSQL", "MongoDB", "GraphQL", "REST APIs"],
		},
		{
			title: "Tools & Others",
			skills: ["Git", "Docker", "AWS", "Figma", "CI/CD", "Linux"],
		},
	],
} = Astro.props;
---

<section id="skills" class="container skills min-h-screen w-full flex">
	<div class="w-full flex flex-col items-center lg:justify-center gap-9">
		<SectionTitle number="02" title="Skills & Technologies" />
		<div class="skills-grid">
			{categories.map((category) => (
				<div class="skill-category">
					<h3 class="category-title">{category.title}</h3>
					<div class="skill-tags">
						{category.skills.map((skill) => (
							<span class="skill-tag">{skill}</span>
						))}
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	/* Transparent background - lets page gradient show through */
	.skills {
		background: transparent;
	}

	html.dark .skills {
		background: transparent;
	}

	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}

	@media (min-width: 1024px) {
		.skills-grid {
			grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
			gap: 2.5rem;
		}
	}

	@media (min-width: 1536px) {
		.skills-grid {
			grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
			gap: 3rem;
		}
	}

	/* Container cards - lighter glassmorphism for floating effect */
	.skill-category {
		background: rgba(255, 255, 255, 0.25);
		backdrop-filter: blur(16px);
		-webkit-backdrop-filter: blur(16px);
		padding: 2.5rem;
		border-radius: 20px;
		border: 1px solid rgba(255, 255, 255, 0.35);
		box-shadow: 0 4px 24px rgba(0, 0, 0, 0.04);
		transition: all 0.3s ease;
	}

	html.dark .skill-category {
		background: rgba(30, 41, 59, 0.35);
		border: 1px solid rgba(148, 163, 184, 0.15);
		box-shadow: 0 4px 24px rgba(0, 0, 0, 0.12);
	}

	.skill-category:hover {
		transform: translateY(-4px);
		background: rgba(255, 255, 255, 0.35);
		box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
		border-color: rgba(255, 140, 60, 0.3);
	}

	html.dark .skill-category:hover {
		background: rgba(30, 41, 59, 0.45);
		box-shadow: 0 12px 32px rgba(0, 0, 0, 0.2);
		border-color: rgba(255, 140, 60, 0.4);
	}

	/* Category headers with orange accent */
	.category-title {
		font-family: 'Libre Baskerville', serif;
		font-size: 1.5rem;
		font-weight: 300;
		margin-bottom: 2rem;
		color: var(--text-primary);
		letter-spacing: -0.01em;
		padding-left: 1rem;
		border-left: 3px solid #ff8c3c;
	}

	.skill-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	/* Skill boxes - subtle glassmorphism */
	.skill-tag {
		padding: 0.625rem 1.125rem;
		background: rgba(255, 255, 255, 0.45);
		backdrop-filter: blur(8px);
		-webkit-backdrop-filter: blur(8px);
		border: 1px solid rgba(255, 255, 255, 0.5);
		border-radius: 12px;
		box-shadow: 0 2px 12px rgba(0, 0, 0, 0.03);
		color: var(--text-secondary);
		font-size: 0.875rem;
		font-weight: 400;
		transition: all 0.3s ease;
		letter-spacing: 0.01em;
	}

	html.dark .skill-tag {
		background: rgba(30, 41, 59, 0.5);
		border: 1px solid rgba(148, 163, 184, 0.2);
		box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
	}

	.skill-tag:hover {
		transform: translateY(-2px);
		background: rgba(255, 255, 255, 0.6);
		box-shadow: 0 6px 20px rgba(0, 0, 0, 0.06);
		border-color: rgba(255, 140, 60, 0.35);
		color: var(--text-primary);
	}

	html.dark .skill-tag:hover {
		background: rgba(30, 41, 59, 0.65);
		box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
		border-color: rgba(255, 140, 60, 0.4);
	}

	@media (max-width: 768px) {
		.skills-grid {
			grid-template-columns: 1fr;
		}

		.skill-category {
			padding: 2rem;
			border-radius: 16px;
		}
	}
</style>